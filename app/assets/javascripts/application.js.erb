function showDaysValue(newValue)
{
  if (newValue > 1) {
  	document.getElementById("daysrange").innerHTML=newValue + ' Dias';
  } else {
  	document.getElementById("daysrange").innerHTML=newValue + ' Dia';
  }
}

function showViewsValue(newValue)
{
  if (newValue > 1) {
  	document.getElementById("viewsrange").innerHTML=newValue + ' Visualizações';
  } else {
  	document.getElementById("viewsrange").innerHTML=newValue + ' Visualização';
  }
}

msg = '<%=PAYLOAD_INITIAL_TEXT%>'
function prepareTextField(e) {
  if (e) {
    if (e.value === msg) {
      e.value = '';
    }
  }
}

function revertTextField(e) {
  if (e)
    if (e.value === '') {
      e.value = msg;
    }
}

